extends layout.pug

block view
  section(class ="jumbotron pt-1 pb-2")
      div(class = "container")
        div(class = 'row justify-content-center pt-5')
          h2 Account Login  
  div(class="container justify-content-center")
    div(class="row justify-content-center")
      form(class="col-3" action="/" method="POST")
        div(class="row form-group")
          input(
            type="email" 
            class="border border-dark flex-grow-1 py-1 px-2" 
            name="email"  
            placeholder="Email" 
            value = email ? email : null
            required)
        div(class="row form-group")
          input(
            type="password" 
            class="border border-dark flex-grow-1 py-1 px-2" 
            name="password" 
            placeholder="Password" 
            required) 
        if err
          p(class ='text-danger') #{err} 
        div(class="row justify-content-center")
          button( type="submit" class="btn btn-outline-dark") Submit
